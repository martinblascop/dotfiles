\set PROMPT1 '%n@%/%R%# '
-- \set PROMPT1 '%[%033[1;32m%]%n@%/%R%#%x%[%033[0m%] '

\set extensions 'select * from pg_available_extensions;'
\set roles 'select m.rolname AS role, r.rolname AS granted_roles FROM pg_auth_members JOIN pg_roles r ON r.oid = pg_auth_members.roleid JOIN pg_roles m ON m.oid = pg_auth_members.member ORDER BY role, member;'
\set slots 'select slot_name, active from pg_replication_slots;'
\set version 'select version();'
\set ECHO_HIDDEN on

\echo 'Welcome dude \n'
\echo 'Type :extensions to see the available extensions.'
\echo 'Type :roles to see roles.'
\echo 'Type :version to see the PostgreSQL version.'
\echo 'Type :slots to see the available slots.'
\echo 'Type \\q to exit. \n'
