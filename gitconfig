[user]
	# These values are set in ~/.gitconfig.local

[include]
	path = ~/.gitconfig.local

[core]
	editor = vim
	excludesfile = ~/.gitignore
	pager = less -x1,5

[pull]
	rebase = true

[rebase]
	autosquash = true

[merge]
	tool = vimdiff

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[log]
	decorate = auto

[alias]
	last-edited = log --pretty=format: --name-only -n 1
	unmerged = diff --name-only --diff-filter=U

[color "diff"]
	old = red bold

[color "branch"]
	remote = yellow bold
	current = green bold

[color "status"]
	added = green bold
	changed = red bold
	untracked = red bold
