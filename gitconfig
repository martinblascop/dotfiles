[user]
	# These values are set in ~/.gitconfig.local

[include]
	path = ~/.gitconfig.local

[core]
	editor = vim
	excludesfile = ~/.gitignore
	pager = less -x1,5

[merge]
	tool = vimdiff

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[log]
	decorate = auto

[alias]
	last-edited = log --pretty=format: --name-only -n 1
	unmerged = diff --name-only --diff-filter=U
