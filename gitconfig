[user]
  email = martinblascop@gmail.com
  name = Martin Blasco

[core]
  editor = vim
  excludesfile = ~/.gitignore
  pager = LESS_TERMCAP_so= LESS_TERMCAP_se= less -x1,5 # unset custom less colors

[pull]
  rebase = true

[rebase]
  autosquash = true

[merge]
  tool = vimdiff

[diff]
  tool = vimdiff

[difftool]
  prompt = false

[log]
  decorate = auto

[alias]
  last-edited = log --pretty=format: --name-only -n 1
  unmerged = diff --name-only --diff-filter=U

[color "diff"]
  old = red bold

[color "branch"]
  remote = yellow bold
  current = green bold

[color "status"]
  added = green bold
  changed = red bold
  untracked = red bold

[include]
  path = ~/.gitconfig.local

[pager]
  config = false
  branch = false
